- content_for :main_view do

  - content_for :form_buttons
    = material_text_button(<%= plural_table_name %>_path, "#{t('go_to_index_of')} #{t('<%= singular_table_name %>', count: 2)}", '', 'arrow-back')
    = material_text_button(<%= singular_table_name %>_path(@<%= singular_table_name %>), "#{t('show')}", '', 'eye')
  = render 'form'

= render 'layouts/main_layout', title: "#{t('edit')} #{t('<%= singular_table_name %>', count: 1)}"
