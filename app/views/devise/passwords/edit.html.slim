= simple_form_for(resource, as: resource_name, url: password_path(resource_name), html: { method: :post }) do |f|
  = f.error_notification
  = f.input :reset_password_token, as: :hidden
  = f.full_error :reset_password_token
  .login-content
    #l-login.lc-block.toggled
      .lcb-form
        h1.c-corporate.m-b-30 =t('devise.passwords.edit.change_my_password')
        - f_field = f.input :password, text_field_config(t('user.password'), { required: true, type: 'password', as: :password, hint: (t('characters_minimum', chars: @minimum_password_length) })
        .m-t-10.m-b-10 = material_form_component('', 'key', f_field)
        - f_field = f.input :password_confirmation, text_field_config(t('repeat_password'), { required: true, type: 'password', as: :password, hint: (t('characters_minimum', chars: @minimum_password_length) })
        .m-t-10.m-b-10 = material_form_component('', 'key', f_field)
        button.btn.btn-login.btn-success.btn-float.bgm-corporate
          i.zmdi.zmdi-arrow-forward
      = render "devise/shared/links"
